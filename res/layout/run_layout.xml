<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView 
        android:id="@+id/selected_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="要写入nfc标签的数据"
        android:textSize="16sp"
        android:textStyle="normal"
        
        />
     
    <Button 
        android:id="@+id/button_select_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="选择你想打开的应用程序"
        />
    <Button 
        android:id="@+id/button_select_uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="点击添加您想加入的网页地址"
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请将nfc标签或者贴纸靠近您的手机背面"
        android:textSize="16sp"
        android:textStyle="normal"
        
        />
    <TextView
        android:id="@+id/showinformation" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nfc的内容"
        android:textSize="16sp"
        android:textStyle="normal"
        
        />
    

</LinearLayout>
